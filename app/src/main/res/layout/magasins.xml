<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="50dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/magasin_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/magasin_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:textStyle="bold"
        android:layout_above="@+id/magasin_switch"
        android:layout_alignStart="@+id/magasin_adresse" />

    <TextView
        android:id="@+id/magasin_adresse"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/magasin_switch"
        android:layout_centerHorizontal="true" />

    <Switch
        android:id="@+id/magasin_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchMinWidth="50dp"
        android:layout_marginEnd="11dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>