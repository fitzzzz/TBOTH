<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/rank_magasin_position"
        android:layout_width="20dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/rank_magasin_position"
        android:id="@+id/rank_magasin_image" />

    <TextView
        android:id="@+id/rank_magasin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/rank_adresse_magasin"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/rank_adresse_magasin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="40dp"
        android:layout_alignTop="@+id/rank_magasin_name"
        android:layout_toEndOf="@+id/rank_magasin_image"
        android:layout_marginTop="26dp" />
</RelativeLayout>